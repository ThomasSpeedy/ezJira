{
  "manifest_version": 2,
  "name": "ezJira",
  "description": "Tools for dealing with JIRA",
  "version": "0.1",
  "author": "Thomas Lepack",
  "icons": {
    "48": "icons/icon48.png"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "browser_action": {
    "default_title": "ezJira",
    "default_icon": {
      "16": "icons/icon16.png"
    },
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "omnibox": {
    "keyword": "ezJira"
  },
  "commands": {
    "copy 1": {
      "description": "Copy JIRA Data 1",
      "suggested_key": {
        "default": "Alt+Shift+1"
      }
    },
    "copy 2": {
      "description": "Copy JIRA Data 2",
      "suggested_key": {
        "default": "Alt+Shift+2"
      }
    },
    "copy 3": {
      "description": "Copy JIRA Data 3",
      "suggested_key": {
        "default": "Alt+Shift+3"
      }
    },
    "copy 4": {
      "description": "Copy JIRA Data 4",
      "suggested_key": {
        "default": "Alt+Shift+4"
      }
    }
  }
}
